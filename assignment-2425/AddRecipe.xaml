<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.AddRecipe"
             Title="AddRecipe"
             Background="{DynamicResource PageBackgroundBrush}">
    <ScrollView>
        <VerticalStackLayout>

            <Label Text="Add a New Recipe"
            FontSize="20"
            FontAttributes="Bold"
            Margin="0,20,0,10" 
             TextColor="{DynamicResource PrimaryTextBrush}"      />

            <Entry x:Name="recipeNameEntry"
             Placeholder="Recipe Name"
             FontSize="18" 
             TextColor="{DynamicResource PrimaryTextBrush}"/>

            <Editor x:Name="ingredientsEditor"
            Placeholder="Ingredients"
            AutoSize="TextChanges"
            HeightRequest="80"
            FontSize="16" 
            TextColor="{DynamicResource PrimaryTextBrush}"/>

            <Editor x:Name="descriptionEditor"
            Placeholder="Description"
            AutoSize="TextChanges"
            HeightRequest="80"
            FontSize="16" 
            TextColor="{DynamicResource PrimaryTextBrush}"/>

            <Editor x:Name="stepsEditor"
            Placeholder="Preparation Steps"
            AutoSize="TextChanges"
            HeightRequest="100"
            FontSize="16" 
            TextColor="{DynamicResource PrimaryTextBrush}"/>

            <Button Text="Add Recipe"
            Clicked="OnAddRecipeClicked"
            BackgroundColor="#4CAF50"
            TextColor="White"
            FontSize="18"
            CornerRadius="10" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>