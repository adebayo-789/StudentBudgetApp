<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:StudentBudgetApp.ViewModels"
             x:Class="StudentBudgetApp.Pages.DashboardPage"
             Title="Dashboard">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Dashboard"
                   FontSize="32"
                   HorizontalOptions="Center" />

            <Label Text="Enter Total Income" FontSize="Medium" />
            <Entry x:Name="IncomeEntry" Keyboard="Numeric" Placeholder="e.g., 1000" />
            <Button Text="Set Income" Clicked="OnSetIncomeClicked" />
            
            <Frame BorderColor="Gray" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Total Income:" FontSize="20" />
                    <Label Text="{Binding TotalIncome, StringFormat='£{0:F2}'}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="Green" />
                </VerticalStackLayout>
            </Frame>

            <Frame BorderColor="Gray" CornerRadius="10" Padding="15">
                <VerticalStackLayout>
                    <Label Text="Remaining Balance:" FontSize="20" />
                    <Label Text="{Binding RemainingBalance, StringFormat='£{0:F2}'}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="DarkOrange" />
                </VerticalStackLayout>
            </Frame>

            

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>