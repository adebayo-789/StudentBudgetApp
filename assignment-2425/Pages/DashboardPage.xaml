<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentBudgetApp.DashboardPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="30"
            VerticalOptions="Center">
            <Label
                Text="🍽 Recipe Pro"
                FontSize="36"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="{DynamicResource PrimaryTextBrush}" />

            <!-- Subtitle -->
            <Label
                Text="Quick and Easy Recipes"
                FontSize="20"
                FontAttributes="Italic"
                HorizontalOptions="Center"
                TextColor="{DynamicResource SecondaryTextBrush}" />

            <!-- CTA Button -->
            <Button
                x:Name="RecipesBtn"
                Text="Browse My Recipes"
                FontSize="18"
                TextColor="White"
                BackgroundColor="{DynamicResource PrimaryColor}"
                CornerRadius="20"
                Padding="14"
                Clicked="OnMyRecipiesClicked"
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
