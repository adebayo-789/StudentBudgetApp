<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:StudentBudgetApp.ViewModels"
             x:Class="StudentBudgetApp.Pages.ExpenseListPage"
             Title="Expense List">

    <ContentPage.BindingContext>
        <vm:BudgetViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Expenses"
                   FontSize="32"
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Expenses}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" CornerRadius="10" Padding="10" Margin="5">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="{Binding Name}"
                                       FontSize="18" />

                                <Label Grid.Column="1"
                                       Text="{Binding Amount, StringFormat='Â£{0:F2}'}"
                                       FontSize="18"
                                       TextColor="Red"
                                       HorizontalTextAlignment="End" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>