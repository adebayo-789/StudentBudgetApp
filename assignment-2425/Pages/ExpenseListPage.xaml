<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentBudgetApp.Pages.ExpenseListPage"
             Title="Expenses">

    <VerticalStackLayout Padding="20">
        <Label Text="Income" />
        <Entry Text="{Binding Income}" Keyboard="Numeric" />

        <Label Text="Remaining" Margin="0,10,0,0"/>
        <Label Text="{Binding Remaining}" FontSize="Large" FontAttributes="Bold" />

        <CollectionView ItemsSource="{Binding Expenses}" Margin="0,20,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding Description}" />
                        <Label Text="{Binding Amount}" HorizontalOptions="EndAndExpand" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add Expense" Clicked="OnAddExpenseClicked" Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>