<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentBudgetApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:StudentBudgetApp.Pages">

    <FlyoutItem Title="Dashboard">
        <ShellContent ContentTemplate="{DataTemplate pages:DashboardPage}" Route="DashboardPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Expenses">
        <ShellContent ContentTemplate="{DataTemplate pages:ExpenseListPage}" Route="ExpenseListPage" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" Route="SettingsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Add Expense">
        <ShellContent ContentTemplate="{DataTemplate pages:AddExpensePage}" Route="AddExpensePage"/>
    </FlyoutItem>

</Shell>
