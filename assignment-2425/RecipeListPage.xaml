<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.RecipeListPage"
             Title="RecipeListPage"
             BackgroundColor="{DynamicResource PageBackgroundBrush}">


    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Saved Recipes" 
                   FontSize="{DynamicResource AppFontSize}"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   TextColor="{DynamicResource PrimaryTextBrush}" />



            <CollectionView x:Name="recipesCollectionView"
                            HeightRequest="200" >
                <CollectionView.ItemTemplate>

                    <DataTemplate>

                        <Frame BorderColor="Gray"
                               CornerRadius="12"
                               Padding="10"
                               Margin="0,5"
                               Background="{DynamicResource FrameBackgroundBrush}">
                            
                            <StackLayout>

                                <Label Text="{Binding Name}"
                                       FontSize="{DynamicResource AppFontSize}"
                                       TextColor="{DynamicResource TextBrush}"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Ingredients}"
                                       FontSize="14" />
                                <Label Text="{Binding Steps}"
                                       FontSize="{DynamicResource AppFontSize}"
                                       TextColor="{DynamicResource PrimaryTextBrush}" />
                                <Button
                                        x:Name="AddRecipeBtn"
                                        Text="Add Recipe" 
                                        Clicked="OnAddRecipeClicked"
                                        HorizontalOptions="Fill" />

                            </StackLayout>

                        </Frame>

                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>




        </VerticalStackLayout>


    </ScrollView>


</ContentPage>