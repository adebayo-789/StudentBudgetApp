<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.RecipeListPage"
             Title="RecipeListPage">

    <ScrollView>
        
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="Saved Recipes" 
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />


            <CollectionView x:Name="recipesCollectionView"
                            HeightRequest="200" >
                <CollectionView.ItemTemplate>
                    
                    <DataTemplate>
                        
                        <Frame BorderColor="Gray"
                               CornerRadius="12"
                               Padding="10"
                               Margin="0,5">
                            <StackLayout>

                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Ingredients}"
                                       FontSize="14" />
                                <Label Text="{Binding Steps}"
                                       FontSize="14"
                                       TextColor="Gray" />

                            </StackLayout>
                            
                        </Frame>
                        
                    </DataTemplate>
                    
                </CollectionView.ItemTemplate>
                
            </CollectionView>

            <Label Text="Add a New Recipe"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,20,0,10" />

            <Entry x:Name="recipeNameEntry"
                   Placeholder="Recipe Name"
                   FontSize="18" />

            <Editor x:Name="ingredientsEditor"
                    Placeholder="Ingredients"
                    AutoSize="TextChanges"
                    HeightRequest="80"
                    FontSize="16" />

            <Editor x:Name="stepsEditor"
                    Placeholder="Preparation Steps"
                    AutoSize="TextChanges"
                    HeightRequest="100"
                    FontSize="16" />

            <Button Text="Add Recipe"
                    Clicked="OnAddRecipeClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="10" />


        </VerticalStackLayout>
        
        
    </ScrollView>
    
    
</ContentPage>